{
  "name": "@nerifnetwork/contracts",
  "version": "0.0.1-rc.1",
  "author": "NerifNetwork",
  "license": "LGPL-3.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/typechain/index.js",
  "types": "dist/typechain/index.d.ts",
  "files": [
    "dist/typechain/**/*"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "compile": "hardhat compile --force",
    "test": "hardhat test",
    "node": "hardhat node",
    "coverage": "npx hardhat coverage --solcoverjs ./.solcover.ts",
    "deploy-localhost": "npx hardhat migrate --network localhost",
    "deploy": "npx hardhat migrate --verify --network",
    "extract-abi": "hardhat run scripts/extract-abi.ts",
    "generate-go-bindings": "npx hardhat gobind",
    "lint": "npm run prettier && npm run solhint && npm run eslint",
    "lint:fix": "npm run prettier:fix && npm run solhint:fix && npm run eslint:fix",
    "solhint": "solhint contracts/**/*.sol",
    "solhint:fix": "solhint contracts/**/*.sol --fix",
    "eslint": "eslint -c .eslintrc.js scripts/**/* test/**/* deploy/**/*",
    "eslint:fix": "eslint -c .eslintrc.js scripts/**/* test/**/* --fix",
    "prettier": "prettier --check scripts/**/* test/**/* contracts/**/*",
    "prettier:fix": "prettier --write scripts/**/* test/**/* contracts/**/* deploy/**/*",
    "prepare": "husky install",
    "copy-types": "cpy 'typechain/**/*.d.ts' 'dist/typechain/'"
  },
  "devDependencies": {
    "@metamask/eth-sig-util": "^7.0.1",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@solarity/hardhat-gobind": "^1.1.1",
    "@solarity/hardhat-migrate": "^2.1.2",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^12.20.47",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "chai": "^4.3.6",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.4",
    "ethereumjs-util": "^7.1.5",
    "ethers": "^5.6.2",
    "hardhat": "^2.11.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^7.0.4",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.8",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.3.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.5.0",
    "@openzeppelin/contracts-upgradeable": "^4.5.2",
    "@solarity/solidity-lib": "2.6.16",
    "cpy-cli": "^4.2.0",
    "glob": "^8.0.3",
    "yaml": "^2.1.3"
  }
}
